
<% provide(:title, "Safari show page") %>

<div class="max-w-6xl mx-auto px-4 py-8">
  <!-- Header Section -->
  <div class="bg-white rounded-lg shadow-lg overflow-hidden mb-8">
    <!-- Image Header -->
    <div class="relative h-96">
      <% if @safari.main_image.attached? %>
        <%= image_tag @safari.main_image, class: "w-full h-96 object-cover", alt: @safari.main_image_alt.presence || @safari.title %>
      <% else %>
        <div class="w-full h-96 bg-earth-brown flex items-center justify-center">
          <svg class="w-20 h-20 text-golden-yellow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9l9-7 9 7v11a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"></path>
          </svg>
        </div>
      <% end %>
      
      <!-- Overlay Content -->
      <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent flex items-end">
        <div class="p-8 text-white w-full">
          <div class="flex flex-wrap items-center gap-4 mb-4">
            <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-deep-green/90 backdrop-blur-sm">
              <%= pluralize(@safari.duration, 'day') %> Safari
            </span>
            <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium <%= difficulty_badge_color(@safari.difficulty) %> backdrop-blur-sm">
              <%= @safari.difficulty.capitalize %>
            </span>
            <% if @safari.is_featured? %>
              <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-golden-yellow text-charcoal backdrop-blur-sm">
                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                </svg>
                Featured
              </span>
            <% end %>
          </div>
          <h1 class="text-4xl font-bold mb-2"><%= @safari.title %></h1>
          <p class="text-xl opacity-90"><%= @safari.overview_title %></p>
        </div>
      </div>
    </div>

    <!-- Quick Facts Bar -->
    <div class="bg-deep-green text-white p-6">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        <div class="text-center">
          <div class="text-2xl font-bold text-golden-yellow">$<%= number_with_delimiter(@safari.price_per_person.to_i) %></div>
          <div class="text-sm">per person</div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold text-golden-yellow"><%= @safari.min_people %>-<%= @safari.max_people %></div>
          <div class="text-sm">group size</div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold text-golden-yellow"><%= @safari.best_season %></div>
          <div class="text-sm">best season</div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold text-golden-yellow"><%= @safari.status.capitalize %></div>
          <div class="text-sm">status</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content Grid -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Left Column - Main Content -->
    <div class="lg:col-span-2 space-y-8">
      <!-- Overview Section -->
      <div class="bg-white rounded-lg shadow-lg p-8">
        <h2 class="text-2xl font-bold text-deep-green mb-6 flex items-center">
          <svg class="w-6 h-6 mr-2 text-golden-yellow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Overview
        </h2>
        <p class="text-gray-700 text-lg leading-relaxed mb-6"><%= @safari.overview_description %></p>
        
        <% if @safari.wildlife_highlight.present? %>
          <div class="bg-gray-50 rounded-lg p-6 border-l-4 border-golden-yellow">
            <h3 class="font-semibold text-deep-green mb-3">Wildlife Highlights</h3>
            <p class="text-gray-700"><%= @safari.wildlife_highlight %></p>
          </div>
        <% end %>
      </div>

      <!-- Main Attractions -->
      <div class="bg-white rounded-lg shadow-lg p-8">
        <h2 class="text-2xl font-bold text-deep-green mb-6 flex items-center">
          <svg class="w-6 h-6 mr-2 text-golden-yellow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
          </svg>
          Main Attractions
        </h2>
        <p class="text-gray-700 text-lg"><%= @safari.main_attractions %></p>
      </div>

      <!-- Daily Activities -->
      <% if @safari.daily_activities.present? %>
        <div class="bg-white rounded-lg shadow-lg p-8">
          <h2 class="text-2xl font-bold text-deep-green mb-6 flex items-center">
            <svg class="w-6 h-6 mr-2 text-golden-yellow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Daily Activities
          </h2>
          <p class="text-gray-700"><%= format_days(@safari.daily_activities) %></p>
        </div>
      <% end %>

      <!-- Gallery Images -->
      <% if @safari.gallery_images.attached? %>
        <div class="bg-white rounded-lg shadow-lg p-8">
          <h2 class="text-2xl font-bold text-deep-green mb-6 flex items-center">
            <svg class="w-6 h-6 mr-2 text-golden-yellow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            Photo Gallery
          </h2>
          <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
            <% @safari.gallery_images.each do |image| %>
              <div class="aspect-square overflow-hidden rounded-lg">
                <%= image_tag image, class: "w-full h-full object-cover hover:scale-105 transition-transform duration-300", alt: "Safari photo" %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Right Column - Sidebar -->
    <div class="space-y-8">
      <!-- Booking Info Card -->
      <div class="bg-white rounded-lg shadow-lg p-6 sticky top-6">
        <h3 class="text-xl font-bold text-deep-green mb-4">Safari Details</h3>
        
        <div class="space-y-4">
          <div class="flex justify-between items-center py-2 border-b border-gray-100">
            <span class="text-gray-600">Duration</span>
            <span class="font-semibold text-deep-green"><%= pluralize(@safari.duration, 'day') %></span>
          </div>
          
          <div class="flex justify-between items-center py-2 border-b border-gray-100">
            <span class="text-gray-600">Difficulty</span>
            <span class="font-semibold <%= difficulty_text_color(@safari.difficulty) %>"><%= @safari.difficulty.capitalize %></span>
          </div>
          
          <div class="flex justify-between items-center py-2 border-b border-gray-100">
            <span class="text-gray-600">Group Size</span>
            <span class="font-semibold text-deep-green"><%= @safari.min_people %>-<%= @safari.max_people %> people</span>
          </div>
          
          <div class="flex justify-between items-center py-2 border-b border-gray-100">
            <span class="text-gray-600">Best Time</span>
            <span class="font-semibold text-deep-green"><%= @safari.best_season %></span>
          </div>
          
          <div class="flex justify-between items-center py-2 border-b border-gray-100">
            <span class="text-gray-600">Accommodation</span>
            <span class="font-semibold text-deep-green"><%= @safari.accommodation_type %></span>
          </div>
          
          <div class="flex justify-between items-center py-2 border-b border-gray-100">
            <span class="text-gray-600">Transport</span>
            <span class="font-semibold text-deep-green"><%= @safari.transport_type %></span>
          </div>

          <div class="bg-golden-yellow/10 border border-golden-yellow/20 rounded-lg p-4 mt-4">
            <div class="text-3xl font-bold text-deep-green text-center mb-2">$<%= number_with_delimiter(@safari.price_per_person.to_i) %></div>
            <div class="text-sm text-gray-600 text-center">per person</div>
          </div>

          <%= link_to "Book This Safari", new_booking_path, class: "w-full bg-deep-green text-white py-3 px-6 rounded-lg hover:bg-green-700 transition-colors text-center font-semibold block mt-4" %>
        </div>
      </div>

      <!-- Logistics Card -->
      <div class="bg-white rounded-lg shadow-lg p-6">
        <h3 class="text-xl font-bold text-deep-green mb-4">Logistics</h3>
        
        <div class="space-y-3">
          <div class="flex items-start">
            <svg class="w-5 h-5 text-golden-yellow mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <div>
              <div class="font-semibold text-gray-900">Departure</div>
              <div class="text-gray-600"><%= @safari.departure_location %></div>
            </div>
          </div>
          
          <div class="flex items-start">
            <svg class="w-5 h-5 text-golden-yellow mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <div>
              <div class="font-semibold text-gray-900">Return</div>
              <div class="text-gray-600"><%= @safari.return_location %></div>
            </div>
          </div>
        </div>
      </div>

      <!-- Services Card -->
      <div class="bg-white rounded-lg shadow-lg p-6">
        <h3 class="text-xl font-bold text-deep-green mb-4">What's Included</h3>
        
        <div class="space-y-3">
          <% @safari.included_services.split("\n").each do |service| %>
            <% if service.present? %>
              <div class="flex items-start">
                <svg class="w-5 h-5 text-green-500 mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="text-gray-700"><%= service %></span>
              </div>
            <% end %>
          <% end %>
        </div>

        <h3 class="text-xl font-bold text-deep-green mb-4 mt-6">Not Included</h3>
        
        <div class="space-y-3">
          <% @safari.excluded_services.split("\n").each do |service| %>
            <% if service.present? %>
              <div class="flex items-start">
                <svg class="w-5 h-5 text-red-500 mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
                <span class="text-gray-700"><%= service %></span>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>

      <!-- What to Bring -->
      <% if @safari.what_to_bring.present? %>
        <div class="bg-white rounded-lg shadow-lg p-6">
          <h3 class="text-xl font-bold text-deep-green mb-4">What to Bring</h3>
          <p class="text-gray-700"><%= @safari.what_to_bring %></p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Action Buttons -->
  <div class="flex justify-center gap-4 mt-12 pt-8 border-t border-gray-200">
    <%= link_to 'Edit Safari', edit_safari_path(@safari), class: "bg-golden-yellow text-charcoal px-8 py-3 rounded-lg hover:bg-yellow-500 transition-colors font-semibold" %>
    <%= link_to 'Back to Safaris', safaris_path, class: "border border-deep-green text-deep-green px-8 py-3 rounded-lg hover:bg-deep-green hover:text-white transition-colors font-semibold" %>
    <%= button_to 'Delete Safari', @safari, method: :delete, data: { confirm: 'Are you sure you want to delete this safari?' }, class: "border border-red-600 text-red-600 px-8 py-3 rounded-lg hover:bg-red-600 hover:text-white transition-colors font-semibold" %>
  </div>
</div>
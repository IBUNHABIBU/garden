<div class="max-w-7xl mx-auto px-4 py-8">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-8">
    <div>
      <h1 class="text-3xl font-bold text-deep-green">Wildlife Safaris</h1>
      <p class="text-charcoal mt-2">Manage all safari packages and adventures</p>
    </div>
    <%= link_to new_safari_path, class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-amber-600 hover:bg-amber-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-golden-yellow mt-4 sm:mt-0" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
      </svg>
      New Safari
    <% end %>
  </div>

  <!-- Safari Cards Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @safaris.each do |safari| %>
      <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300 border border-gray-100">
        <!-- Image -->
        <div class="relative">
          <% if safari.main_image.attached? %>
            <%= image_tag safari.main_image, class: "w-full h-48 object-cover", alt: safari.main_image_alt.presence || safari.title %>
          <% else %>
            <div class="w-full h-48 bg-earth-brown flex items-center justify-center">
              <svg class="w-12 h-12 text-golden-yellow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9l9-7 9 7v11a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"></path>
              </svg>
            </div>
          <% end %>
          
          <!-- Status Badge -->
          <div class="absolute top-4 right-4">
            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium <%= status_badge_color(safari.status) %>">
              <%= safari.status.presence || 'active' %>
            </span>
          </div>
          
          <!-- Featured Badge -->
          <% if safari.is_featured? %>
            <div class="absolute top-4 left-4">
              <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-golden-yellow text-charcoal">
                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                </svg>
                Featured
              </span>
            </div>
          <% end %>
        </div>

        <!-- Content -->
        <div class="p-6">
          <!-- Title and Duration -->
          <div class="flex justify-between items-start mb-3">
            <h3 class="text-xl font-semibold text-deep-green line-clamp-2"><%= safari.title %></h3>
            <span class="flex-shrink-0 ml-3 bg-gray-100 text-charcoal px-2 py-1 rounded-full text-sm font-medium">
              <%= pluralize(safari.duration, 'day') %>
            </span>
          </div>

          <!-- Difficulty -->
          <div class="flex items-center mb-4">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= difficulty_badge_color(safari.difficulty) %>">
              <%= safari.difficulty.capitalize %>
            </span>
          </div>

          <!-- Overview -->
          <p class="text-gray-600 text-sm mb-4 line-clamp-3"><%= safari.overview_description %></p>

          <!-- Main Attractions -->
          <div class="mb-4">
            <h4 class="text-sm font-medium text-charcoal mb-2">Main Attractions:</h4>
            <p class="text-gray-600 text-sm line-clamp-2"><%= safari.main_attractions %></p>
          </div>

          <!-- Pricing and Season -->
          <div class="grid grid-cols-2 gap-4 mb-4">
            <div>
              <p class="text-sm font-medium text-charcoal">Price</p>
              <p class="text-lg font-bold text-deep-green">$<%= number_with_delimiter(safari.price_per_person.to_i) %></p>
              <p class="text-xs text-gray-500">per person</p>
            </div>
            <div>
              <p class="text-sm font-medium text-charcoal">Best Season</p>
              <p class="text-sm text-gray-600"><%= safari.best_season %></p>
            </div>
          </div>

          <!-- Group Size -->
          <div class="flex items-center justify-between mb-6">
            <div class="flex items-center text-sm text-gray-500">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
              <%= safari.min_people %>-<%= safari.max_people %> people
            </div>
          </div>

          <!-- Action Buttons -->
          <div class="flex space-x-3">
            <%= link_to 'View', safari, class: "flex-1 text-center bg-green-500 text-white px-4 py-2 rounded-md hover:bg-green-700 transition-colors text-sm font-medium" %>
            <%= link_to 'Edit', edit_safari_path(safari), class: "flex-1 text-center border border-green-900 text-deep-green px-4 py-2 rounded-md hover:bg-green-900 hover:text-white transition-colors text-sm font-medium" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Empty State -->
  <% if @safaris.empty? %>
    <div class="text-center py-12">
      <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9l9-7 9 7v11a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"></path>
      </svg>
      <h3 class="text-lg font-medium text-charcoal mb-2">No safaris yet</h3>
      <p class="text-gray-500 mb-4">Get started by creating your first safari package</p>
      <%= link_to new_safari_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green-400 hover:bg-green-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-golden-yellow" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
        </svg>
        Create Safari
      <% end %>
    </div>
  <% end %>
</div>

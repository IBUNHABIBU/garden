<div class="relative h-screen max-h-[800px] overflow-hidden">
  <%= image_tag @page.hero_image, class: "w-full h-full object-cover", alt: "Kilimanjaro view" if @page.hero_image.attached? %>
  <div class="absolute inset-0 bg-gradient-to-r from-primary/80 to-secondary/60 flex items-center">
    <div class="container mx-auto px-6 text-white">
      <h1 class="text-5xl md:text-7xl font-bold mb-4">
        <span class="text-accent">Explore</span> The Roof of Africa
      </h1>
      <p class="text-xl md:text-2xl mb-8 max-w-2xl">
        Journey to Kilimanjaro with Africa's premier safari experts
      </p>
      <%= link_to "Book Your Safari", new_booking_path, 
          class: "bg-accent hover:bg-accent-dark text-primary font-bold py-3 px-8 rounded-full text-lg transition duration-300" %>
    </div>
  </div>
</div>
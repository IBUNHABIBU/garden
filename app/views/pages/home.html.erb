<% if @page.slug == 'home' %>
  <!-- Hero Section -->
  <section class="relative bg-cover bg-center h-screen flex items-center" style="background-image: url('<%= image_path('team.png') %>')">
    <div class="absolute inset-0 bg-black opacity-40"></div>
    <div class="container mx-auto px-6 relative z-10">
      <div class="max-w-2xl">
        <h1 class="text-5xl font-bold text-white mb-6">Discover Your Perfect Adventure</h1>
        <p class="text-xl text-white mb-8">Explore the world's most breathtaking destinations with our expert guides and premium services.</p>
        <div class="flex space-x-4">
          <%= link_to "Explore Tours", services_path, class: "bg-indigo-600 text-white px-6 py-3 rounded-md hover:bg-indigo-700 transition" %>
          <%= link_to "Contact Us", contact_path, class: "bg-white text-indigo-600 px-6 py-3 rounded-md hover:bg-gray-100 transition" %>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Services -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-gray-800 mb-4">Our Popular Services</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">We offer a wide range of tourism services to make your journey unforgettable.</p>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        <% @services.each do |service| %>
          <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition">
            <div class="p-6">
              <div class="text-indigo-600 text-4xl mb-4">
                <i class="<%= service.icon %>"></i>
              </div>
              <h3 class="text-xl font-bold text-gray-800 mb-2"><%= service.title %></h3>
              <p class="text-gray-600"><%= service.description %></p>
            </div>
          </div>
        <% end %>
      </div>
      
      <div class="text-center mt-12">
        <%= link_to "View All Services", services_path, class: "inline-block bg-indigo-600 text-white px-6 py-3 rounded-md hover:bg-indigo-700 transition" %>
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="py-20 bg-indigo-600 text-white">
    <div class="container mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold mb-4">What Our Clients Say</h2>
        <p class="max-w-2xl mx-auto opacity-90">Hear from travelers who've experienced our services first-hand.</p>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        <% @testimonials.each do |testimonial| %>
          <div class="bg-white bg-opacity-10 p-6 rounded-lg backdrop-filter backdrop-blur-sm">
            <div class="mb-4">
              <i class="fas fa-quote-left text-indigo-300 text-xl"></i>
            </div>
            <p class="mb-6"><%= testimonial.content %></p>
            <div class="flex items-center">
              <div class="mr-4">
                <div class="h-12 w-12 rounded-full bg-indigo-500 flex items-center justify-center">
                  <i class="fas fa-user text-white"></i>
                </div>
              </div>
              <div>
                <h4 class="font-bold"><%= testimonial.name %></h4>
                <p class="text-indigo-200 text-sm"><%= testimonial.role %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-20 bg-gray-800 text-white">
    <div class="container mx-auto px-6 text-center">
      <h2 class="text-3xl font-bold mb-6">Ready for Your Next Adventure?</h2>
      <p class="text-xl mb-8 max-w-2xl mx-auto">Book your dream vacation today and let us handle all the details.</p>
      <%= link_to "Book Now", new_booking_path, class: "bg-indigo-600 text-white px-8 py-4 rounded-md hover:bg-indigo-700 transition inline-block" %>
    </div>
  </section>
<% else %>
  <!-- Regular Page Content -->
  <section class="py-20">
    <div class="container mx-auto px-6">
      <h1 class="text-4xl font-bold text-gray-800 mb-6"><%= @page.title %></h1>
      <div class="prose max-w-none">
        <%= raw @page.content %>
      </div>
    </div>
  </section>
<% end %>
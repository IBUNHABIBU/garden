<% if super_admin %>
  <div class="p-8">
    <h1 class="text-3xl font-bold mb-6">Visitor Statistics</h1>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <div class="bg-white rounded-2xl shadow p-6 text-center">
        <h2 class="text-gray-500">Total Visits</h2>
        <p class="text-3xl font-bold text-blue-600"><%= @total_visits %></p>
      </div>

      <div class="bg-white rounded-2xl shadow p-6 text-center">
        <h2 class="text-gray-500">Today's Visits</h2>
        <p class="text-3xl font-bold text-green-600"><%= @today_visits %></p>
      </div>
    </div>

    <h3 class="text-2xl font-semibold mb-2">Last 7 Days</h3>

    <div class="bg-white rounded-2xl shadow p-6">
      <div class="bg-white rounded-2xl shadow p-6">
    <h3 class="text-2xl font-semibold mb-4">Visits by Day</h3>

    <table class="min-w-full border-collapse border border-gray-200 rounded-lg overflow-hidden">
      <thead class="bg-gray-100">
        <tr>
          <th class="py-2 px-4 text-left text-gray-600 font-medium">Date</th>
          <th class="py-2 px-4 text-left text-gray-600 font-medium">Number of Visits</th>
        </tr>
      </thead>
      <tbody>
        <% @visits_by_day.each do |date, count| %>
          <tr class="border-t hover:bg-gray-50 transition">
            <td class="py-2 px-4"><%= date.strftime("%B %d, %Y") %></td>
            <td class="py-2 px-4 font-semibold text-blue-600"><%= count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>


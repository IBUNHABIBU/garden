<% content_for :title, "Admin Dashboard" %>

<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-12">
      <h1 class="text-3xl font-bold text-green-800 mb-4">Admin Dashboard</h1>
      <p class="text-gray-600">Manage your travel platform content</p>
      <p class="text-sm text-gray-500 mt-2">Welcome, <%= current_user.display_name %> (<%= current_user.role.titleize %>)</p>
    </div>

    <!-- Stats Overview -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
      <!-- Tours Card -->
      <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200">
        <div class="flex items-center">
          <div class="flex-shrink-0 bg-blue-100 p-3 rounded-lg">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9l9-7 9 7v11a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600">Travel Tours</p>
            <p class="text-2xl font-bold text-gray-900"><%= TravelTour.count %></p>
          </div>
        </div>
      </div>
      

      <!-- Trekkings Card -->
      <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200">
        <div class="flex items-center">
          <div class="flex-shrink-0 bg-green-100 p-3 rounded-lg">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600">Trekkings</p>
            <p class="text-2xl font-bold text-gray-900"><%= Trekking.count %></p>
          </div>
        </div>
      </div>

      <!-- Safaris Card -->
      <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200">
        <div class="flex items-center">
          <div class="flex-shrink-0 bg-amber-100 p-3 rounded-lg">
            <svg class="w-8 h-8 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9l9-7 9 7v11a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600">Wildlife Safaris</p>
            <p class="text-2xl font-bold text-gray-900"><%= Safari.count %></p>
          </div>
        </div>
      </div>

      <!-- Users Card -->
      <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200">
        <div class="flex items-center">
          <div class="flex-shrink-0 bg-purple-100 p-3 rounded-lg">
            <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600">Total Users</p>
            <p class="text-2xl font-bold text-gray-900"><%= User.count %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Actions Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Travel Tours Section -->
      <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-200">
        <h2 class="text-xl font-semibold text-green-800 mb-4 flex items-center">
          <svg class="w-6 h-6 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9l9-7 9 7v11a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"></path>
          </svg>
          Travel Tours
        </h2>
        <p class="text-gray-600 mb-4">Manage travel tour packages and itineraries</p>
        <div class="space-y-2">
          <%= link_to "View All Tours", travel_tours_path, class: "block w-full text-center bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition-colors duration-200" %>
          <%= link_to "Create New Tour", new_travel_tour_path, class: "block w-full text-center bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg transition-colors duration-200" %>
        </div>
      </div>

       <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-200">
        <h2 class="text-xl font-semibold text-green-800 mb-4 flex items-center">
          <svg class="w-6 h-6 mr-2 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
            d="M9 12l2 2 4-4m5-2.586V7a2 2 0 00-2-2h-1.382a2 2 0 01-1.447-.605l-1.586-1.586a2 2 0 00-1.447-.605H9.862a2 2 0 00-1.447.605L6.829 4.395A2 2 0 015.382 5H4a2 2 0 00-2 2v2.414a2 2 0 00.586 1.414l8.293 8.293a2 2 0 002.828 0l8.293-8.293A2 2 0 0021 9.414z" />
          </svg>

          Front part/ reception/ Hero Section Slogan
        </h2>
        <p class="text-gray-600 mb-4">Manage front part</p>
        <div class="space-y-2">
        <%= link_to "Create New hero", new_hero_path, class: "block w-full text-center bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg transition-colors duration-200" %>
        </div>
      </div>


      <!-- Trekkings Section -->
      <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-200">
        <h2 class="text-xl font-semibold text-green-800 mb-4 flex items-center">
          <svg class="w-6 h-6 mr-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
          Trekkings
        </h2>
        <p class="text-gray-600 mb-4">Manage trekking adventures and routes</p>
        <div class="space-y-2">
          <%= link_to "View All Treks", trekkings_path, class: "block w-full text-center bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition-colors duration-200" %>
          <%= link_to "Create New Trek", new_trekking_path, class: "block w-full text-center bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg transition-colors duration-200" %>
        </div>
      </div>

       <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-200">
        <h2 class="text-xl font-semibold text-green-800 mb-4 flex items-center">
          <svg class="w-6 h-6 mr-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
          Team Members
        </h2>
        <p class="text-gray-600 mb-4">Manage team members</p>
        <div class="space-y-2">
          <%= link_to "Add Team members", new_team_member_path, class: "block w-full text-center bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg transition-colors duration-200" %>
        </div>
      </div>
      <!-- Wildlife Safaris Section -->
      <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-200">
        <h2 class="text-xl font-semibold text-green-800 mb-4 flex items-center">
          <svg class="w-6 h-6 mr-2 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9l9-7 9 7v11a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"></path>
          </svg>
          Wildlife Safaris
        </h2>
        <p class="text-gray-600 mb-4">Manage safari experiences and wildlife tours</p>
        <div class="space-y-2">
          <%= link_to "View All Safaris", safaris_path, class: "block w-full text-center bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition-colors duration-200" %>
          <%= link_to "Create New Safari", new_safari_path, class: "block w-full text-center bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg transition-colors duration-200" %>
        </div>
      </div>

      <!-- Destinations Section -->
      <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-200">
        <h2 class="text-xl font-semibold text-green-800 mb-4 flex items-center">
          <svg class="w-6 h-6 mr-2 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
          Destinations
        </h2>
        <p class="text-gray-600 mb-4">Manage travel destinations and locations</p>
        <div class="space-y-2">
          <%= link_to "View All Destinations", destinations_path, class: "block w-full text-center bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition-colors duration-200" %>
          <%= link_to "Create New Destination", new_destination_path, class: "block w-full text-center bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg transition-colors duration-200" %>
        </div>
      </div>

      <!-- Testimonials Section -->
      <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-200">
        <h2 class="text-xl font-semibold text-green-800 mb-4 flex items-center">
          <svg class="w-6 h-6 mr-2 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905a3.61 3.61 0 01-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5"></path>
          </svg>
          Testimonials
        </h2>
        <p class="text-gray-600 mb-4">Manage customer reviews and testimonials</p>
        <div class="space-y-2">
          <%= link_to "View All Testimonials", testimonials_path, class: "block w-full text-center bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition-colors duration-200" %>
          <%= link_to "Create New Testimonial", new_testimonial_path, class: "block w-full text-center bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg transition-colors duration-200" %>
        </div>
      </div>

      <!-- User Management Section -->
      <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-200">
        <h2 class="text-xl font-semibold text-green-800 mb-4 flex items-center">
          <svg class="w-6 h-6 mr-2 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
          User Management
        </h2>
        <p class="text-gray-600 mb-4">Manage users and admin permissions</p>
        <div class="space-y-2">
          <%= link_to "View All Users", users_path, class: "block w-full text-center bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition-colors duration-200" %>
          <% if current_user.super_admin? %>
            <%= link_to "Manage Roles", users_path, class: "block w-full text-center bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-lg transition-colors duration-200" %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Recent Activity Section -->
    <div class="mt-12 bg-white rounded-xl shadow-lg p-6 border border-gray-200">
      <h2 class="text-xl font-semibold text-green-800 mb-6">Recent Activity</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="text-center">
          <div class="bg-blue-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-3">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-800">Quick Access</h3>
          <p class="text-sm text-gray-600 mt-1">All management tools in one place</p>
        </div>
        
        <div class="text-center">
          <div class="bg-green-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-3">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-800">Admin Only</h3>
          <p class="text-sm text-gray-600 mt-1">Secure access for authorized personnel</p>
        </div>
        
        <div class="text-center">
          <div class="bg-amber-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-3">
            <svg class="w-8 h-8 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-800">Fast Navigation</h3>
          <p class="text-sm text-gray-600 mt-1">Quick links to all management sections</p>
        </div>
      </div>
    </div>
  </div>
</div>
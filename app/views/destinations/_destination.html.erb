<div id="<%= dom_id destination %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= destination.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Country:</strong>
    <%= destination.country %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Description:</strong>
    <%= destination.description %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Featured:</strong>
    <%= destination.featured? ? "Yes" : "No" %>
  </div>
</div>

<%= form_with(model: destination, local: true, class: "space-y-6") do |form| %>
  <% if destination.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6 rounded">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-500" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(destination.errors.count, "error") %> prohibited this destination from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% destination.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="bg-white p-6 rounded-lg shadow-md border border-stone-300">
    <!-- Basic Information in Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
      <div>
        <%= form.label :name, class: "block text-sm font-medium text-stone-700 mb-1" %>
        <%= form.text_field :name, class: "w-full px-3 py-2 border border-stone-300 rounded-md shadow-sm focus:outline-none focus:ring-1 focus:ring-orange-600 focus:border-orange-600 text-stone-900 text-sm" %>
      </div>

      <div>
        <%= form.label :country, class: "block text-sm font-medium text-stone-700 mb-1" %>
        <%= form.text_field :country, class: "w-full px-3 py-2 border border-stone-300 rounded-md shadow-sm focus:outline-none focus:ring-1 focus:ring-orange-600 focus:border-orange-600 text-stone-900 text-sm" %>
      </div>
    </div>

    <!-- Featured Checkbox -->
    <div class="flex items-center mb-4">
      <%= form.check_box :featured, class: "h-4 w-4 text-orange-600 focus:ring-orange-600 border-stone-300 rounded" %>
      <%= form.label :featured, "Feature this destination", class: "ml-2 block text-sm text-stone-700" %>
    </div>

    <!-- Description -->
    <div class="mb-4">
      <%= form.label :description, class: "block text-sm font-medium text-stone-700 mb-1" %>
      <%= form.text_area :description, rows: 4, class: "w-full px-3 py-2 border border-stone-300 rounded-md shadow-sm focus:outline-none focus:ring-1 focus:ring-orange-600 focus:border-orange-600 text-stone-900 text-sm" %>
    </div>

    <!-- Image Upload -->
    <div>
      <%= form.label :image, "Destination Image", class: "block text-sm font-medium text-stone-700 mb-1" %>
      <div class="flex items-center space-x-4">
        <%= form.file_field :image, class: "flex-1 text-sm text-stone-700 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-stone-400 file:text-white hover:file:bg-stone-500" %>
        
        <% if destination.persisted? && destination.image.attached? %>
          <div class="flex items-center space-x-4">
            <div class="w-16 h-16 bg-stone-200 rounded-md border border-stone-300 overflow-hidden">
              <%= image_tag destination.image, class: "w-full h-full object-cover" %>
            </div>
            <div class="flex items-center">
              <%= form.check_box :remove_image, class: "h-4 w-4 text-orange-600 focus:ring-orange-600 border-stone-300 rounded" %>
              <%= form.label :remove_image, "Remove current image", class: "ml-2 block text-sm text-stone-700" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Actions -->
  <div class="flex justify-end space-x-4 pt-6">
    <%= link_to "Cancel", destinations_path, class: "px-6 py-2 border border-stone-300 rounded-md shadow-sm text-sm font-medium text-stone-700 bg-white hover:bg-stone-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-600" %>
    <%= form.submit class: "px-6 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-600" %>
  </div>
<% end %>
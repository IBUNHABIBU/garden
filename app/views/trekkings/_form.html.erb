<%= form_with(model: trekking, class: "space-y-6") do |form| %>
  <% if trekking.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6 rounded">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-500" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(trekking.errors.count, "error") %> prohibited this trekking from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% trekking.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Images Section -->
  <div class="bg-white p-6 rounded-lg shadow-md border border-stone-300">
    <h3 class="text-lg font-medium text-stone-900 mb-4 border-b border-stone-200 pb-2">Images</h3>
    
    <!-- Main Image -->
    <div class="mb-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <%= form.label :main_image, "Main Featured Image", class: "block text-sm font-medium text-stone-700 mb-1" %>
          <%= form.file_field :main_image, accept: "image/jpeg,image/png,image/webp", class: "w-full text-sm text-stone-700 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-stone-400 file:text-white hover:file:bg-stone-500" %>
        </div>
        
        <div>
          <%= form.label :main_image_alt, "Image Alt Text (for accessibility)", class: "block text-sm font-medium text-stone-700 mb-1" %>
          <%= form.text_field :main_image_alt, class: "w-full px-3 py-2 border border-stone-300 rounded-md shadow-sm focus:outline-none focus:ring-1 focus:ring-orange-600 focus:border-orange-600 text-stone-900 text-sm" %>
        </div>
      </div>
      
      <% if trekking.persisted? && trekking.main_image.attached? %>
        <div class="mt-4 p-4 bg-stone-50 rounded-md">
          <p class="text-sm font-medium text-stone-700 mb-2">Current Main Image</p>
          <div class="w-48 h-32 bg-stone-200 rounded-md overflow-hidden">
            <%= image_tag trekking.main_image, class: "w-full h-full object-cover" %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Gallery Images -->
    <div>
      <%= form.label :gallery_images, "Additional Gallery Images", class: "block text-sm font-medium text-stone-700 mb-1" %>
      <%= form.file_field :gallery_images, multiple: true, accept: "image/jpeg,image/png,image/webp", class: "w-full text-sm text-stone-700 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-stone-400 file:text-white hover:file:bg-stone-500" %>
      
      <% if trekking.persisted? && trekking.gallery_images.attached? %>
        <div class="mt-4 p-4 bg-stone-50 rounded-md">
          <p class="text-sm font-medium text-stone-700 mb-2">Current Gallery Images</p>
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            <% trekking.gallery_images.each do |image| %>
              <div class="w-full h-24 bg-stone-200 rounded-md overflow-hidden">
                <%= image_tag image, class: "w-full h-full object-cover" %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Basic Info -->
  <div class="bg-white p-6 rounded-lg shadow-md border border-stone-300">
    <h3 class="text-lg font-medium text-stone-900 mb-4 border-b border-stone-200 pb-2">Basic Information</h3>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <%= form.label :title, "Trek Name", class: "block text-sm font-medium text-stone-700 mb-1" %>
        <%= form.text_field :title, class: "w-full px-3 py-2 border border-stone-300 rounded-md shadow-sm focus:outline-none focus:ring-1 focus:ring-orange-600 focus:border-orange-600 text-stone-900 text-sm" %>
      </div>
      
      <div>
        <%= form.label :duration, "Duration (days)", class: "block text-sm font-medium text-stone-700 mb-1" %>
        <%= form.number_field :duration, class: "w-full px-3 py-2 border border-stone-300 rounded-md shadow-sm focus:outline-none focus:ring-1 focus:ring-orange-600 focus:border-orange-600 text-stone-900 text-sm" %>
      </div>
      
      <div>
        <%= form.label :difficulty, class: "block text-sm font-medium text-stone-700 mb-1" %>
        <%= form.select :difficulty, ['easy', 'medium', 'challenging'], {}, class: "w-full px-3 py-2 border border-stone-300 rounded-md shadow-sm focus:outline-none focus:ring-1 focus:ring-orange-600 focus:border-orange-600 text-stone-900 text-sm" %>
      </div>
      
      <div>
        <%= form.label :overview_title, class: "block text-sm font-medium text-stone-700 mb-1" %>
        <%= form.text_field :overview_title, class: "w-full px-3 py-2 border border-stone-300 rounded-md shadow-sm focus:outline-none focus:ring-1 focus:ring-orange-600 focus:border-orange-600 text-stone-900 text-sm" %>
      </div>
    </div>
    
    <div class="mt-4">
      <%= form.label :overview_description, class: "block text-sm font-medium text-stone-700 mb-1" %>
      <%= form.text_area :overview_description, rows: 3, class: "w-full px-3 py-2 border border-stone-300 rounded-md shadow-sm focus:outline-none focus:ring-1 focus:ring-orange-600 focus:border-orange-600 text-stone-900 text-sm" %>
    </div>
  </div>

  <!-- Action Text Content -->
  <div class="bg-white p-6 rounded-lg shadow-md border border-stone-300">
    <h3 class="text-lg font-medium text-stone-900 mb-4 border-b border-stone-200 pb-2">Detailed Content</h3>
    
    <div class="mb-4">
      <p class="text-sm text-stone-600 bg-stone-50 p-3 rounded-md">
        Use the editor below to create detailed itinerary, highlights, and other information.
      </p>
    </div>
    
    <div>
      <%= form.label :content, class: "block text-sm font-medium text-stone-700 mb-2" %>
      <%= form.rich_text_area :content, class: "min-h-[400px] border border-stone-300 rounded-md focus:outline-none focus:ring-1 focus:ring-orange-600 focus:border-orange-600" %>
    </div>
  </div>

  <!-- Submit Button -->
  <div class="flex justify-end space-x-4 pt-6">
    <%= link_to "Cancel", trekkings_path, class: "px-6 py-2 border border-stone-300 rounded-md shadow-sm text-sm font-medium text-stone-700 bg-white hover:bg-stone-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-600" %>
    <%= form.submit trekking.persisted? ? "Update Trek" : "Create Trek", class: "px-6 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-600" %>
  </div>
<% end %>
<%= form_with(model: trekking) do |form| %>
  <% if trekking.errors.any? %>
    <div class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mb-4">
      <h2><%= pluralize(trekking.errors.count, "error") %> prohibited this trekking from being saved:</h2>
      <ul>
        <% trekking.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-deep-green focus:ring-deep-green" %>
  </div>

  <div class="mb-4">
    <%= form.label :duration, "Duration (days)", class: "block text-sm font-medium text-gray-700" %>
    <%= form.number_field :duration, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-deep-green focus:ring-deep-green" %>
  </div>

  <div class="mb-4">
    <%= form.label :difficulty, class: "block text-sm font-medium text-gray-700" %>
    <%= form.select :difficulty, ['easy', 'medium', 'challenging'], {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-deep-green focus:ring-deep-green" %>
  </div>

  <div class="mb-4">
    <%= form.label :overview_title, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :overview_title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-deep-green focus:ring-deep-green" %>
  </div>

  <div class="mb-4">
    <%= form.label :overview_description, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :overview_description, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-deep-green focus:ring-deep-green" %>
  </div>

  <div class="mb-4">
    <%= form.label :content, "Itinerary and Details", class: "block text-sm font-medium text-gray-700" %>
    <%= form.rich_text_area :content, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-deep-green focus:ring-deep-green" %>
  </div>

  <div class="mb-4">
    <%= form.submit class: "inline-flex justify-center rounded-md border border-transparent bg-deep-green py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-golden-yellow focus:ring-offset-2" %>
  </div>
<% end %>
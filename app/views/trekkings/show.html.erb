<div class="max-w-5xl mx-auto px-4 py-8">
  <div class="bg-white shadow rounded-lg overflow-hidden">
    <div class="p-6">
      <h1 class="text-3xl font-bold text-deep-green mb-2"><%= @trekking.title %></h1>
      
      <div class="flex items-center space-x-4 mb-4">
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-earth-brown text-white">
          <%= @trekking.duration %> days
        </span>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-<%= difficulty_color(@trekking.difficulty) %>-100 text-<%= difficulty_color(@trekking.difficulty) %>-800">
          <%= @trekking.difficulty.capitalize %>
        </span>
      </div>
      
      <h2 class="text-xl font-semibold text-charcoal mb-2"><%= @trekking.overview_title %></h2>
      <p class="text-gray-700 mb-6"><%= @trekking.overview_description %></p>
      
      <div class="prose max-w-none">
        <%= @trekking.content %>
      </div>
    </div>
    
    <div class="bg-gray-50 px-6 py-4 flex justify-between items-center">
      <%= link_to 'Edit', edit_trekking_path(@trekking), class: "text-golden-yellow hover:text-yellow-600" %>
      <%= link_to 'Back', trekkings_path, class: "text-charcoal hover:text-gray-600" %>
    </div>
  </div>
</div>
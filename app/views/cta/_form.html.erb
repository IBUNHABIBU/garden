<%= form_with(model: ctum, class: "contents") do |form| %>
  <% if ctum.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(ctum.errors.count, "error") %> prohibited this ctum from being saved:</h2>

      <ul class="list-disc ml-6">
        <% ctum.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :title %>
    <%= form.text_field :title, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": ctum.errors[:title].none?, "border-red-400 focus:outline-red-600": ctum.errors[:title].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :subtitle %>
    <%= form.text_field :subtitle, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": ctum.errors[:subtitle].none?, "border-red-400 focus:outline-red-600": ctum.errors[:subtitle].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :button_text %>
    <%= form.text_field :button_text, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": ctum.errors[:button_text].none?, "border-red-400 focus:outline-red-600": ctum.errors[:button_text].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :button_url %>
    <%= form.text_field :button_url, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": ctum.errors[:button_url].none?, "border-red-400 focus:outline-red-600": ctum.errors[:button_url].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :background_color %>
    <%= form.text_field :background_color, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": ctum.errors[:background_color].none?, "border-red-400 focus:outline-red-600": ctum.errors[:background_color].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>

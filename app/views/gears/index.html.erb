<!-- app/views/gears/index.html.erb -->
<div class="max-w-5xl mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold text-green mb-6">Important! Climbing Gear Required for a Safe Kilimanjaro Summit</h1>

  <div class="bg-white shadow overflow-hidden sm:rounded-md">
    <ul class="divide-y divide-gray-200">
      <% @gears.each do |gear| %>
        <li>
          <%= link_to gear_path(gear), class: "block hover:bg-gray-50" do %>
            <div class="px-4 py-4 sm:px-6">
              <div class="flex items-center justify-between">
                <p class="text-lg font-medium text-deep-green truncate">Which Gear Do I Need to climb Kilimanjaro?</p>
                <div class="ml-2 flex-shrink-0 flex">
                  <p class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
                    Gear List
                  </p>
                </div>
              </div>
              <div class="mt-2">
                <p class="text-sm text-gray-500 line-clamp-2">
                  <%= truncate(strip_tags(gear.content.to_s), length: 150) %>
                </p>
              </div>
              <div class="mt-2 flex items-center text-sm text-gray-500">
                <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M12.586 4.586a2 2 0 112.828 2.828l-3 3a2 2 0 01-2.828 0 1 1 0 00-1.414 1.414 4 4 0 005.656 0l3-3a4 4 0 00-5.656-5.656l-1.5 1.5a1 1 0 101.414 1.414l1.5-1.5zm-5 5a2 2 0 012.828 0 1 1 0 101.414-1.414 4 4 0 00-5.656 0l-3 3a4 4 0 105.656 5.656l1.5-1.5a1 1 0 10-1.414-1.414l-1.5 1.5a2 2 0 11-2.828-2.828l3-3z" clip-rule="evenodd" />
                </svg>
                Read full gear list
              </div>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
<div class="bg-warm-white py-12">
  <div class="container mx-auto px-4">
    <div class="flex justify-between items-center mb-8">
      <div>
        <h1 class="text-3xl font-bold text-deep-green"><%= @service.title %></h1>
        <p class="text-earthy-brown"><%= @service.category %></p>
      </div>
      <div class="flex space-x-4">
        <%= link_to "Back to Services", services_path, class: "text-earthy-brown hover:text-golden-yellow" %>
        <% if current_user %>
          <%= link_to "Edit", edit_service_path(@service), class: "text-blue-600 hover:text-blue-800" %>
        <% end %>
      </div>
    </div>

    <!-- Image Gallery with Stimulus controller -->
    <div class="mb-12" data-controller="image-gallery">
      <div class="relative h-96 overflow-hidden rounded-lg shadow-lg mb-4">
        <% if @service.image.present? %>
          <div data-image-gallery-target="slide" class="absolute inset-0">
            <%= image_tag @service.image, alt: @service.title, class: "w-full h-full object-cover" %>
          </div>
        <% end %>
        <% if @service.images.attached? %>
          <% @service.images.each do |image| %>
            <div data-image-gallery-target="slide" class="absolute inset-0 hidden">
              <%= image_tag image, alt: @service.title, class: "w-full h-full object-cover" %>
            </div>
          <% end %>
        <% end %>
      </div>

      <% if @service.images.attached? && @service.images.count > 1 %>
        <div class="flex justify-center space-x-4">
          <button data-action="image-gallery#previous" class="bg-earthy-brown text-warm-white p-2 rounded-full hover:bg-golden-yellow transition duration-300">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
          </button>
          <button data-action="image-gallery#next" class="bg-earthy-brown text-warm-white p-2 rounded-full hover:bg-golden-yellow transition duration-300">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </button>
        </div>
      <% end %>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <div class="lg:col-span-2">
        <h2 class="text-2xl font-bold text-deep-green mb-4">About This Adventure</h2>
        <div class="prose max-w-none text-dark-charcoal">
          <%= simple_format(@service.description) %>
        </div>
      </div>

      <div class="bg-white p-6 rounded-lg shadow-md">
        <h3 class="text-xl font-bold text-deep-green mb-4">Quick Facts</h3>
        <div class="space-y-4">
          <div>
            <h4 class="font-medium text-earthy-brown">Duration</h4>
            <p><%= @service.duration || "Customizable" %></p>
          </div>
          <div>
            <h4 class="font-medium text-earthy-brown">Difficulty</h4>
            <p><%= @service.difficulty || "Varies" %></p>
          </div>
          <div>
            <h4 class="font-medium text-earthy-brown">Price</h4>
            <p><%= @service.price || "Contact for pricing" %></p>
          </div>
          <%= link_to "Book Now", "#", class: "block w-full bg-golden-yellow hover:bg-earthy-brown text-dark-charcoal hover:text-warm-white text-center font-bold py-3 px-6 rounded-lg transition duration-300" %>
        </div>
      </div>
    </div>
  </div>
</div>
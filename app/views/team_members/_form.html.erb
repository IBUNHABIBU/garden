<%= form_with(model: team_member, class: "contents") do |form| %>
  <% if team_member.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(team_member.errors.count, "error") %> prohibited this team_member from being saved:</h2>

      <ul class="list-disc ml-6">
        <% team_member.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": team_member.errors[:name].none?, "border-red-400 focus:outline-red-600": team_member.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :title %>
    <%= form.text_field :title, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": team_member.errors[:title].none?, "border-red-400 focus:outline-red-600": team_member.errors[:title].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :bio %>
    <%= form.textarea :bio, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": team_member.errors[:bio].none?, "border-red-400 focus:outline-red-600": team_member.errors[:bio].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :display_order %>
    <%= form.number_field :display_order, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": team_member.errors[:display_order].none?, "border-red-400 focus:outline-red-600": team_member.errors[:display_order].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>

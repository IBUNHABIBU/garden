<%= form_with(model: team_member) do |form| %>
  <% if team_member.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6">
      <h2 class="text-sm font-medium text-red-800"><%= pluralize(team_member.errors.count, "error") %> prohibited this team member from being saved:</h2>
      <ul class="mt-2 text-sm text-red-700">
        <% team_member.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
    <div>
      <%= form.label :name, "Full Name *", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_field :name, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500" %>
    </div>

    <div>
      <%= form.label :title, "Position/Title *", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_field :title, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500" %>
    </div>
  </div>

  <div class="mb-6">
    <%= form.label :bio, "Bio/Description *", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_area :bio, rows: 4, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500" %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
    <div>
      <%= form.label :photo, "Photo URL", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_field :photo, placeholder: "https://example.com/photo.jpg", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500" %>
      <p class="text-sm text-gray-500 mt-1">Or upload a photo using the file field below</p>
    </div>

    <div>
      <%= form.label :display_order, "Display Order", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.number_field :display_order, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500" %>
      <p class="text-sm text-gray-500 mt-1">Lower numbers appear first (0, 1, 2, ...)</p>
    </div>
  </div>

  <!-- Photo Upload (if using Active Storage) -->
  <div class="mb-6">
    <%= form.label :photo_upload, "Upload Photo", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.file_field :photo, accept: "image/*", class: "w-full px-4 py-2 border border-gray-300 rounded-lg" %>
  </div>

  <div class="flex justify-end space-x-4">
    <%= link_to "Cancel", team_members_path, class: "px-6 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors duration-200" %>
    <%= form.submit team_member.persisted? ? "Update Team Member" : "Create Team Member", 
          class: "px-6 py-2 bg-green-800 hover:bg-green-700 text-white rounded-lg font-medium transition-colors duration-200 cursor-pointer" %>
  </div>
<% end %>
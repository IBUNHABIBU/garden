<!-- app/views/videos/show.html.erb -->
<div class="max-w-4xl mx-auto px-4">
  <div class="bg-white shadow rounded-lg overflow-hidden">
    <div class="p-6">
      <h1 class="text-3xl font-bold text-gray-900 mb-4"><%= @video.title %></h1>
      
      <% if @video.video_file.attached? %>
        <div class="mb-6">
          <%= video_tag url_for(@video.video_file), controls: true, class: "w-full rounded-lg h-[80vh]" %>
        </div>
      <% end %>

     

      <div class="grid grid-cols-2 gap-4 mb-6">
        <div>
          <h3 class="text-sm font-medium text-gray-500">Duration</h3>
          <p class="text-gray-900"><%= @video.duration %> seconds</p>
        </div>
     
      </div>

      <div class="flex gap-2">
        <%= link_to 'Edit', edit_video_path(@video), class: "px-4 py-2 bg-amber-600 text-white rounded-md hover:bg-amber-700" %>
        <%= link_to 'Delete', @video, method: :delete, data: { confirm: 'Are you sure?' }, class: "px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700" %>
        <%= link_to 'Back', root_path, class: "px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300" %>
      </div>
    </div>
  </div>
</div>
<%= form_with(model: hero, local: true) do |form| %>
  <% if hero.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mb-6">
      <h2><%= pluralize(hero.errors.count, "error") %> prohibited this hero from being saved:</h2>

      <ul>
        <% hero.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-6">
    <div>
      <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-800 focus:ring-green-800 sm:text-sm" %>
    </div>

    <div>
      <%= form.label :subtitle, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :subtitle, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-800 focus:ring-green-800 sm:text-sm" %>
    </div>

    <div>
      <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :description, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-800 focus:ring-green-800 sm:text-sm" %>
    </div>

    <div>
      <%= form.label :images, class: "block text-sm font-medium text-gray-700" %>
      <%= form.file_field :images, multiple: true, class: "mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-green-800 file:text-white hover:file:bg-green-700" %>
      
   <% if hero.images.attached? %>
  <div class="mt-4 grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
    <% hero.images.each do |image| %>
      <div class="relative group rounded-md overflow-hidden" style="height: 128px;">
        <%= image_tag image, class: "h-full w-full object-cover" %>
        
        <!-- Hover overlay -->
        <div class="absolute inset-0 bg-black opacity-0 group-hover:opacity-20 transition-opacity pointer-events-none"></div>
        
        <!-- Checkbox -->
        <div class="absolute top-2 right-2 z-10">
          <label class="flex items-center justify-center h-6 w-6 rounded-full bg-white shadow-lg cursor-pointer hover:bg-red-50 transition-colors">
            <%= check_box_tag "hero[images_to_remove][]", image.signed_id, false, 
                class: "h-4 w-4 rounded border-gray-300 text-red-600 focus:ring-red-500 cursor-pointer",
                id: "remove_image_#{image.id}" %>
          </label>
        </div>
      </div>
    <% end %>
  </div>
  <p class="mt-2 text-sm text-gray-500">Check images to remove them</p>
<% end %>
    </div>

    <div class="flex items-center justify-end space-x-3">
      <%= link_to "Cancel", hero.persisted? ? hero_path(hero) : heros_path, class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-800" %>
      <%= form.submit class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-800 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-800" %>
    </div>
  </div>
<% end %>
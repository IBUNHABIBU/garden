<div id="<%= dom_id hero %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Title:</strong>
    <%= hero.title %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Subtitle:</strong>
    <%= hero.subtitle %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Description:</strong>
    <%= hero.description %>
  </div>

  <% if hero.image.attached? %>
  <%= image_tag hero.image %>
<% else %>
  <h1>No image attached</h1>
<% end %>
</div>

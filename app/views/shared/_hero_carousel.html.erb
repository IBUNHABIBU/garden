<div class="swiper hero-swiper" data-controller="swiper">
  <div class="swiper-wrapper">
    <% @hero_slides.each do |slide| %>
      <div class="swiper-slide relative bg-cover bg-center h-screen flex items-center" style="background-image: url('<%= slide[:image_url] %>')">
        <div class="absolute inset-0 bg-black opacity-40"></div>
        <div class="container mx-auto px-6 relative z-10">
          <div class="max-w-2xl">
            <h1 class="text-5xl font-bold text-white mb-6"><%= slide[:title] %></h1>
            <p class="text-xl text-white mb-8"><%= slide[:subtitle] %></p>
            <div class="flex space-x-4">
              <%= link_to "Explore Tours", services_path, class: "bg-indigo-600 text-white px-6 py-3 rounded-md hover:bg-indigo-700 transition" %>
              <%= link_to "Contact Us", contact_path, class: "bg-white text-indigo-600 px-6 py-3 rounded-md hover:bg-gray-100 transition" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <!-- Add pagination -->
  <div class="swiper-pagination"></div>
  <!-- Add navigation buttons -->
  <div class="swiper-button-prev text-white"></div>
  <div class="swiper-button-next text-white"></div>
</div>
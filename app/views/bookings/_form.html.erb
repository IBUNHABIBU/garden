<%= form_with(model: booking) do |form| %>
  <% if booking.errors.any? %>
    <div class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mb-4">
      <h2><%= pluralize(booking.errors.count, "error") %> prohibited this booking from being saved:</h2>
      <ul>
        <% booking.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <!-- Personal Information -->
    <div class="space-y-4">
      <h3 class="text-lg font-medium text-deep-green">Personal Information</h3>
      
      <div>
        <%= form.label :full_name, "Full Name *", class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :full_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-deep-green focus:ring-deep-green" %>
      </div>

      <div>
        <%= form.label :email, "Email *", class: "block text-sm font-medium text-gray-700" %>
        <%= form.email_field :email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-deep-green focus:ring-deep-green" %>
      </div>

      <div>
        <%= form.label :phone, "Phone Number *", class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :phone, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-deep-green focus:ring-deep-green" %>
      </div>
    </div>

    <!-- Booking Details -->
    <div class="space-y-4">
      <h3 class="text-lg font-medium text-deep-green">Booking Details</h3>
      
      <div>
        <%= form.label :trek_name, "Subject *", class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :trek_name, placeholder: "e.g., Kilimanjaro Summit, Safari Tour", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-deep-green focus:ring-deep-green" %>
      </div>

      <div class="grid grid-cols-2 gap-4">
        <div>
          <%= form.label :start_date, "Start Date *", class: "block text-sm font-medium text-gray-700" %>
          <%= form.date_field :start_date, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-deep-green focus:ring-deep-green" %>
        </div>

        <div>
          <%= form.label :end_date, "End Date *", class: "block text-sm font-medium text-gray-700" %>
          <%= form.date_field :end_date, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-deep-green focus:ring-deep-green" %>
        </div>
      </div>

      <div>
        <%= form.label :number_of_people, "Number of People *", class: "block text-sm font-medium text-gray-700" %>
        <%= form.number_field :number_of_people, min: 1, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-deep-green focus:ring-deep-green" %>
      </div>

      <% if booking.persisted? %>
        <div>
          <%= form.label :status, "Status", class: "block text-sm font-medium text-gray-700" %>
          <%= form.select :status, ['pending', 'confirmed', 'cancelled', 'completed'], {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-deep-green focus:ring-deep-green" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Special Requests -->
  <div class="mt-6">
    <h3 class="text-lg font-medium text-deep-green mb-4">Additional Information</h3>
    <div>
      <%= form.label :special_requests, "Special Requests or Notes", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :special_requests, rows: 3, placeholder: "Any dietary restrictions, special requirements, or additional information...", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-deep-green focus:ring-deep-green" %>
    </div>
  </div>

  <!-- Submit Button -->
  <div class="mt-8 flex justify-end">
    <%= form.submit booking.persisted? ? "Update Booking" : "Create Booking", class: "inline-flex justify-center rounded-md border border-transparent bg-green-600 py-3 px-6 text-sm font-medium text-white shadow-sm hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-golden-yellow focus:ring-offset-2" %>
  </div>
<% end %>
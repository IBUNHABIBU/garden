<div class="min-h-screen bg-warm-white flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <!-- Logo -->
    <div class="flex justify-center">
      <%= link_to root_path, class: "flex items-center space-x-2" do %>
        <%= image_tag "mavelogo.png", alt: "Marvellous Safaris Limited", class: "h-16 w-auto" %>
        <div class="hidden md:block">
          <span class="text-deep-green font-bold text-xl">MARVELLOUS SAFARIS</span>
          <span class="block text-golden-yellow text-sm">LIMITED</span>
        </div>
      <% end %>
    </div>

    <h2 class="mt-6 text-center text-3xl font-bold text-deep-green">
      Sign in to your account
    </h2>
    <p class="mt-2 text-center text-sm text-charcoal">
      Or
      <%= link_to "create a new account", new_user_registration_path, class: "font-medium text-golden-yellow hover:text-yellow-600" %>
    </p>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="space-y-6">
          <!-- Email Field -->
          <div>
            <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", 
                  class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-deep-green focus:border-deep-green sm:text-sm" %>
            </div>
          </div>

          <!-- Password Field -->
          <div>
            <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= f.password_field :password, autocomplete: "current-password", 
                  class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-deep-green focus:border-deep-green sm:text-sm" %>
            </div>
          </div>

          <!-- Remember Me Checkbox -->
          <% if devise_mapping.rememberable? %>
            <div class="flex items-center">
              <%= f.check_box :remember_me, class: "h-4 w-4 text-deep-green focus:ring-deep-green border-gray-300 rounded" %>
              <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-900" %>
            </div>
          <% end %>

          <!-- Submit Button -->
          <div>
            <%= f.submit "Sign in", 
                class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-golden-yellow transition-colors duration-200" %>
          </div>
        </div>
      <% end %>

      <!-- Links -->
      <div class="mt-6">
        <div class="relative">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-300"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-2 bg-white text-gray-500">Need help?</span>
          </div>
        </div>

        <div class="mt-6 text-center">
          <%= link_to "Forgot your password?", new_password_path(resource_name), 
              class: "font-medium text-golden-yellow hover:text-yellow-600 text-sm" %>
        </div>
      </div>

      <!-- Demo Account Hint (optional) -->
      <div class="mt-6 p-4 bg-gray-50 rounded-lg">
        <h3 class="text-sm font-medium text-charcoal mb-2">Demo Access:</h3>
        <p class="text-xs text-gray-600">
          Email: admin@marvelloussafaris.com<br>
          Password: password123
        </p>
      </div>
    </div>
  </div>
</div>

<!-- Error Messages -->
<% if alert %>
  <div class="fixed top-4 right-4 max-w-sm w-full bg-red-50 border-l-4 border-red-400 p-4 rounded-lg shadow-lg z-50">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
        </svg>
      </div>
      <div class="ml-3">
        <p class="text-sm text-red-700"><%= alert %></p>
      </div>
    </div>
  </div>
<% end %>

<% if notice %>
  <div class="fixed top-4 right-4 max-w-sm w-full bg-green-50 border-l-4 border-green-400 p-4 rounded-lg shadow-lg z-50">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
        </svg>
      </div>
      <div class="ml-3">
        <p class="text-sm text-green-700"><%= notice %></p>
      </div>
    </div>
  </div>
<% end %>
<% if obj.image.attached? %>
  <div class="slides__bg absolute inset-0 w-full h-full">
    <%= image_tag obj.image, class: "slides__img w-full h-full object-cover" %>
    <div class="slides__overlay absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-transparent flex flex-col justify-end p-6 md:p-10">
      <div class="slides__title text-white text-2xl md:text-4xl font-bold mb-3" id="rated_title">
        <%=  obj.title %>
      </div>
      <div class="slides__content text-white text-base md:text-lg max-w-2xl">
        <%= obj.subtitle %>
      </div>
      <div class="slides__content text-white text-base md:text-lg max-w-2xl">
        <%= truncate(obj.description, length: 100, separator: ' ') %>
      </div
    </div>
  </div>
<% end %>
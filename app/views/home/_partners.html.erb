<!-- Our Partners Section - Visible on all screens -->
<div class="mt-16 bg-gray-50 rounded-lg p-8">
  <h2 class="text-2xl font-bold text-center text-gray-800 mb-8">Our Partners</h2>
  
  <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-8 items-center justify-items-center">
    <!-- TANAPA Logo -->
    <div class="hover:scale-105 transition duration-300">
      <%= image_tag "serengetilogo.jpeg", 
          alt: "TANAPA - Tanzania National Parks", 
          class: "max-h-24 w-auto object-contain",
          loading: "lazy" %>
    </div>

    <!-- Ngorongoro Logo -->
    <div class="hover:scale-105 transition duration-300">
      <%= image_tag "ngorongorologo.jpeg", 
          alt: "Ngorongoro Conservation Area", 
          class: "max-h-24 w-auto object-contain",
          loading: "lazy" %>
    </div>

    <!-- Serengeti Logo -->
    <div class="hover:scale-105 transition duration-300">
      <%= image_tag "tourismsector.jpg", 
          alt: "Serengeti National Park", 
          class: "max-h-24 w-auto object-contain",
          loading: "lazy" %>
    </div>

    <!-- Tourism Ministry Logo -->
    <div class="hover:scale-105 transition duration-300">
      <%= image_tag "touristboard.png", 
          alt: "Ministry of Natural Resources and Tourism", 
          class: "max-h-24 w-auto object-contain",
          loading: "lazy" %>
    </div>

  </div>
</div>
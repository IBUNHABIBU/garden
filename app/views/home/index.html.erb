<% if @hero %>
  <!-- Hero Section -->
  <div class="relative h-screen min-h-[32rem] bg-gray-900 overflow-hidden">
    <!-- Background Image with Overlay -->
    <% if @hero.image.attached? %>
      <div class="absolute inset-0 z-0">
        <%= image_tag @hero.image, class: "w-full h-full object-cover opacity-70", alt: "Travel destination" %>
        <div class="absolute inset-0 bg-gradient-to-r from-green-800/80 to-amber-800/50 mix-blend-multiply"></div>
      </div>
    <% end %>

    <!-- Content -->
    <div class="relative z-10 max-w-7xl mx-auto h-full flex items-center px-4 sm:px-6 lg:px-8">
      <div class="text-left max-w-3xl">
        <h1 class="text-4xl font-extrabold tracking-tight text-white sm:text-5xl lg:text-6xl">
          <span class="block"><%= @hero.title %></span>
          <span class="block text-amber-300"><%= @hero.subtitle %></span>
        </h1>
        <p class="mt-6 text-xl text-gray-100 max-w-lg">
          <%= @hero.description %>
        </p>
        <div class="mt-10 flex flex-wrap gap-4">
          <%= link_to "Explore Tours", "#", class: "px-8 py-4 border border-transparent text-base font-medium rounded-md text-white bg-amber-600 hover:bg-amber-700 md:py-4 md:text-lg md:px-10 transition duration-300" %>
          <%= link_to "View Destinations", "#", class: "px-8 py-4 border border-transparent text-base font-medium rounded-md text-white bg-green-800 hover:bg-green-700 md:py-4 md:text-lg md:px-10 transition duration-300" %>
        </div>
      </div>
    </div>

    <!-- Scrolling Indicator -->
    <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 z-10">
      <a href="#featured-tours" class="animate-bounce inline-flex items-center justify-center w-12 h-12 rounded-full bg-white/20 backdrop-blur-sm text-white hover:text-amber-300 transition">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
      </a>
    </div>
  </div>
<% else %>
  <!-- Empty State -->
  <div class="relative h-screen min-h-[32rem] bg-gray-900 flex items-center justify-center">
    <div class="text-center max-w-2xl px-4">
      <h2 class="text-3xl font-bold text-white">No hero section configured</h2>
      <p class="mt-4 text-lg text-gray-300">Get started by creating your travel hero section</p>
      <%= link_to "Create Hero Section", new_hero_path, class: "mt-6 inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-green-800 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-800" %>
    </div>
  </div>
<% end %>

<!-- Featured Tours Section (placeholder for scrolling) -->
<section id="featured-tours" class="py-16 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-extrabold text-gray-900">Featured Tours</h2>
    <!-- Tours will go here -->
  </div>
</section>


<!-- Featured Tours Section -->
<section id="featured-tours" class="py-16 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
        <span class="block">Our Featured Adventures</span>
        <span class="block text-amber-600 mt-2">Handpicked Experiences</span>
      </h2>
      <p class="mt-4 max-w-2xl mx-auto text-xl text-gray-600">
        Discover our most popular tours loved by travelers worldwide
      </p>
    </div>

    <% if @featured_tours.any? %>
      <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
        <% @featured_tours.each do |tour| %>
          <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl transition duration-300">
            <% if tour.image.attached? %>
              <div class="h-48 overflow-hidden">
                <%= image_tag tour.image, class: "w-full h-full object-cover", alt: tour.name %>
              </div>
            <% else %>
              <div class="h-48 bg-gray-200 flex items-center justify-center">
                <span class="text-gray-500">No image available</span>
              </div>
            <% end %>
            <div class="p-6">
              <div class="flex items-center mb-2">
                <span class="inline-block px-2 py-1 text-xs font-semibold text-amber-800 bg-amber-100 rounded-full"><%= tour.category %></span>
                <span class="ml-auto text-sm font-medium text-green-800"><%= tour.duration %> days</span>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-2"><%= tour.name %></h3>
              <p class="text-gray-600 mb-4"><%= truncate(tour.description, length: 100) %></p>
              <div class="flex items-center justify-between">
                <span class="text-lg font-bold text-green-800">$<%= tour.price %></span>
                <%= link_to "View Tour", travel_tour_path(tour), class: "px-4 py-2 text-sm font-medium text-white bg-amber-600 hover:bg-amber-700 rounded-md transition" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <div class="mt-12 text-center">
        <%= link_to "View All Tours", travel_tours_path, class: "px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-green-800 hover:bg-green-700 shadow-sm" %>
      </div>
    <% else %>
      <div class="text-center py-8">
        <p class="text-gray-500 mb-4">No featured tours available yet</p>
        
          <%= link_to "Create a Tour", new_travel_tour_path, class: "px-4 py-2 bg-green-800 text-white rounded-md hover:bg-green-700" %>
        
      </div>
    <% end %>
  </div>
</section>


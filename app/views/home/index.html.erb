<!-- Hero Section with scroll reveal -->
<div class="relative bg-deep-green text-warm-white overflow-hidden" data-controller="scroll-reveal">
  <div class="absolute inset-0">
    <%= image_tag "tanzania-hero.jpg", alt: "Tanzanian landscape", class: "w-full h-full object-cover opacity-30" %>
  </div>
  
  <div class="relative container mx-auto px-4 py-24 md:py-32">
    <div class="max-w-2xl transform transition-all duration-1000 opacity-0 translate-y-10" data-scroll-reveal-target="element">
      <h1 class="text-4xl md:text-5xl font-bold mb-6">Discover Tanzania's Wonders</h1>
      <p class="text-xl mb-8">Experience breathtaking safaris, majestic Kilimanjaro climbs, and pristine Zanzibar beaches with Mave Adventures.</p>
      <div class="flex flex-col sm:flex-row space-y-4 sm:space-y-0 sm:space-x-4">
        <%= link_to "Our Services", services_path, class: "bg-golden-yellow hover:bg-earthy-brown text-dark-charcoal hover:text-warm-white font-bold py-3 px-6 rounded-lg transition duration-300 text-center" %>
        <%= link_to "Contact Us", "#", class: "border-2 border-warm-white hover:bg-warm-white hover:text-deep-green font-bold py-3 px-6 rounded-lg transition duration-300 text-center" %>
      </div>
    </div>
  </div>
</div>

<!-- Featured Services with animation -->
<div class="bg-warm-white py-16">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center text-dark-charcoal mb-12 transform transition-all duration-1000 opacity-0 translate-y-10" data-controller="scroll-reveal">Our Popular Adventures</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% @featured_services.each_with_index do |service, index| %>
        <div class="bg-white rounded-lg shadow-lg overflow-hidden transition-transform duration-300 hover:scale-105 transform transition-all duration-1000 opacity-0 translate-y-10" 
             data-controller="scroll-reveal"
             data-transition-delay="<%= index * 100 %>">
          <% if service.image.present? %>
            <div class="h-48 overflow-hidden">
              <%= image_tag service.image, alt: service.title, class: "w-full h-full object-cover" %>
            </div>
          <% end %>
          <div class="p-6">
            <h3 class="text-xl font-bold text-deep-green mb-2"><%= service.title %></h3>
            <p class="text-dark-charcoal mb-4"><%= truncate(service.description, length: 100) %></p>
            <%= link_to "Learn More", service, class: "text-earthy-brown hover:text-golden-yellow font-medium transition duration-300" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<!-- After Why Choose Us section -->

<!-- Destination Highlights Section -->
<section class="py-16 bg-white" id="destinations">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
        Explore Our Top Destinations
      </h2>
      <p class="mt-4 max-w-2xl mx-auto text-xl text-gray-600">
        From majestic mountains to pristine beaches
      </p>
    </div>

    <% if @popular_destinations.any? %>
      <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
        <% @popular_destinations.each do |destination| %>
          <div class="relative group overflow-hidden rounded-lg shadow-md h-96">
            <% if destination.image.attached? %>
              <%= image_tag destination.image.variant(resize_to_limit: [100, 100]),
              loading: "lazy", class: "w-full h-full object-cover transform group-hover:scale-105 transition duration-500", alt: destination.name %>
            <% else %>
              <div class="w-full h-full bg-gray-200 flex items-center justify-center">
                <span class="text-gray-500">No image available</span>
              </div>
            <% end %>
            <div class="absolute inset-0 bg-gradient-to-t from-gray-900/70 via-gray-900/30 to-transparent"></div>
            <div class="absolute bottom-0 left-0 p-6 w-full">
              <h3 class="text-2xl font-bold text-white"><%= destination.name %></h3>
              <p class="mt-2 text-gray-200"><%= destination.country %></p>
              <%= link_to "View destination", destination_path(destination), class: "mt-4 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-green-800 bg-amber-300 hover:bg-amber-400" %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-8">
        <p class="text-gray-500 mb-4">No featured destinations available yet</p>
        <% if user_signed_in? %>
          <%= link_to "Add Destinations", new_destination_path, class: "px-4 py-2 bg-green-800 text-white rounded-md hover:bg-green-700" %>
        <% end %>
      </div>
    <% end %>
  </div>
</section>

<!-- Testimonials Section -->
<section class="py-16 bg-neutral-light">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
        Traveler Stories
      </h2>
      <p class="mt-4 max-w-2xl mx-auto text-xl text-gray-600">
        Don't just take our word for it
      </p>
    </div>

    <% if @testimonials.any? %>
      <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
        <% @testimonials.each do |testimonial| %>
          <div class="bg-white p-6 rounded-lg shadow-md">
            <div class="flex items-center mb-4">
              <% if testimonial.avatar.attached? %>
                <%= image_tag testimonial.avatar.variant(resize_to_limit: [100, 100]),
              loading: "lazy", class: "h-12 w-12 rounded-full object-cover", alt: testimonial.author_name %>
              <% else %>
                <div class="h-12 w-12 rounded-full bg-gray-200 flex items-center justify-center">
                  <span class="text-gray-500 text-xs">Photo</span>
                </div>
              <% end %>
              <div class="ml-4">
                <h4 class="text-lg font-medium text-gray-900"><%= testimonial.author_name %></h4>
                <% if testimonial.author_title.present? %>
                  <p class="text-amber-600 text-sm"><%= testimonial.author_title %></p>
                <% end %>
              </div>
            </div>
            <p class="text-gray-600 italic">"<%= testimonial.content %>"</p>
            <div class="mt-4 flex">
              <span class="text-amber-400"><%= testimonial.star_rating %></span>
            </div>
          </div>
        <% end %>
      </div>

      <div class="mt-12 text-center">
        <%= link_to "Read More Stories", testimonials_path, class: "px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-green-800 hover:bg-green-700 shadow-sm" %>
      </div>
    <% else %>
      <div class="text-center py-8">
        <p class="text-gray-500 mb-4">No testimonials yet</p>
        
          <%= link_to "Add Testimonial", new_testimonial_path, class: "px-4 py-2 bg-green-800 text-white rounded-md hover:bg-green-700" %>
        
      </div>
    <% end %>
  </div>
</section>

<!-- Call to Action Section -->
<section class="bg-green-800">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 text-center">
    <h2 class="text-3xl font-extrabold text-white sm:text-4xl">
      <span class="block">Ready for Your Next Adventure?</span>
    </h2>
    <p class="mt-4 max-w-2xl mx-auto text-xl text-green-100">
      Join thousands of happy travelers who've explored with us
    </p>
    <div class="mt-8 flex flex-col sm:flex-row justify-center space-y-4 sm:space-y-0 sm:space-x-4">
      <%= link_to "Book Now", new_booking_path, class: "px-8 py-3 border border-transparent text-base font-medium rounded-md text-green-800 bg-amber-300 hover:bg-amber-400 md:py-4 md:text-lg md:px-10 transition duration-300" %>
      <%= link_to "Contact Us", pages_contact_path, class: "px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-green-700 hover:bg-green-600 md:py-4 md:text-lg md:px-10 transition duration-300" %>
    </div>
  </div>
</section>


<div data-controller="slider" 
     class="relative overflow-hidden rounded-xl shadow-lg h-96 md:h-[500px]">
  
  <!-- Slides Container -->
  <div class="relative w-full h-full">
    <% @hero.each_with_index do |hero, index| %>
      <% if hero.image.attached? %>
        <div class="slides__bg absolute inset-0 w-full h-full <%= index.zero? ? '' : 'hidden' %>"
             data-slider-target="slide">
          
          <%= image_tag hero.image, 
                class: "slides__img w-full h-full object-cover" %>
          
          <div class="slides__overlay absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-transparent flex flex-col justify-end p-6 md:p-10">
            <div class="slides__title text-white text-2xl md:text-4xl font-bold mb-3">
              <%= hero.title %>
            </div>
            <div class="slides__content text-white text-base md:text-lg max-w-2xl">
              <%= truncate(hero.description, length: 100, separator: ' ') %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <!-- Dots Navigation -->
  <div class="dots absolute bottom-4 left-1/2 transform -translate-x-1/2 flex space-x-2">
    <% @hero.each_with_index do |hero, index| %>
      <button data-action="click->slider#goToSlide" 
              data-slider-target="dot" 
              data-index="<%= index %>"
              class="w-3 h-3 rounded-full bg-white transition-all duration-300 <%= index.zero? ? 'bg-opacity-100' : 'bg-opacity-50' %>">
      </button>
    <% end %>
  </div>

  <!-- Navigation Arrows -->
  <button class="slider-prev absolute left-4 top-1/2 transform -translate-y-1/2 bg-black/30 text-white p-2 rounded-full hover:bg-black/50 transition-all duration-300">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
    </svg>
  </button>
  
  <button class="slider-next absolute right-4 top-1/2 transform -translate-y-1/2 bg-black/30 text-white p-2 rounded-full hover:bg-black/50 transition-all duration-300">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
    </svg>
  </button>
</div>

    
    <% if @featuredvideo %>
      <!-- Video Title -->
      <div class="mb-8">
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
          <%= @featuredvideo.title %>
        </h1>
      </div>

      <!-- Video Player -->
      <div class="bg-black rounded-lg overflow-hidden shadow-2xl mb-8">
        <% if @featuredvideo.video_file.attached? %>
          <%= video_tag url_for(@featuredvideo.video_file), 
              controls: true, 
              class: "w-full aspect-video h-[80vh]" %>
        <% else %>
          <div class="text-white p-8 text-center">
            Video file not found
          </div>
        <% end %>
      </div>


    <% else %>
      <!-- No Video Uploaded -->
      <div class="text-center py-20">
        <svg class="w-24 h-24 mx-auto text-gray-400 mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
        </svg>
        <h2 class="text-3xl font-bold text-white mb-4">No Video Yet</h2>
        <p class="text-gray-300 text-lg mb-8">Upload a video to get started.</p>
        
        <% if user_signed_in? %>
          <%= link_to 'Upload Video', new_video_path, 
              class: "px-6 py-3 bg-green-800 text-white rounded-lg hover:bg-green-700 font-medium transition inline-block" %>
        <% end %>
      </div>
    <% end %>

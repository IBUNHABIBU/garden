<div id="<%= dom_id testimonial %>" class="space-y-4">
  <!-- Author Info -->
  <div class="flex items-center space-x-4">
    <div class="flex-shrink-0">
      <% if testimonial.avatar.attached? %>
        <%= image_tag testimonial.avatar.variant(resize_to_limit: [100, 100]),
              loading: "lazy", class: "h-14 w-14 rounded-full object-cover border-2 border-white shadow-md", alt: testimonial.author_name %>
      <% else %>
        <div class="h-14 w-14 bg-green-800 rounded-full flex items-center justify-center border-2 border-white shadow-md">
          <span class="text-white font-semibold text-lg">
            <%= testimonial.author_name[0..1].upcase %>
          </span>
        </div>
      <% end %>
    </div>
    <div class="flex-1 min-w-0">
      <h3 class="text-lg font-semibold text-gray-900"><%= testimonial.author_name %></h3>
      <% if testimonial.author_title.present? %>
        <p class="text-sm text-gray-600"><%= testimonial.author_title %></p>
      <% end %>
    </div>
  </div>

  <!-- Rating -->
  <% if testimonial.rating.present? %>
    <div class="flex items-center">
      <div class="flex items-center">
        <% 5.times do |i| %>
          <svg class="w-5 h-5 <%= i < testimonial.rating.to_i ? 'text-amber-400' : 'text-gray-300' %>" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
          </svg>
        <% end %>
      </div>
      <span class="ml-2 text-sm text-gray-600">(<%= testimonial.rating %>/5)</span>
    </div>
  <% end %>

  <!-- Content -->
  <div class="bg-gray-50 rounded-lg p-4">
    <svg class="w-6 h-6 text-green-600 opacity-50 mb-2" fill="currentColor" viewBox="0 0 24 24">
      <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
    </svg>
    <p class="text-gray-700 italic leading-relaxed"><%= testimonial.content %></p>
  </div>

  <!-- Meta Info -->
  <div class="flex items-center justify-between text-xs text-gray-500">
    <span>Added <%= time_ago_in_words(testimonial.created_at) %> ago</span>
    <% if testimonial.updated_at != testimonial.created_at %>
      <span>Updated <%= time_ago_in_words(testimonial.updated_at) %> ago</span>
    <% end %>
  </div>
</div>
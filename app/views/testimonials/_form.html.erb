<%= form_with(model: testimonial, local: true, html: { class: "space-y-6" }) do |form| %>
  <% if testimonial.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mb-6">
      <h2><%= pluralize(testimonial.errors.count, "error") %> prohibited this testimonial from being saved:</h2>
      <ul>
        <% testimonial.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
    <div>
      <%= form.label :author_name, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :author_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-800 focus:ring-green-800 sm:text-sm" %>
    </div>

    <div>
      <%= form.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :author_title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-800 focus:ring-green-800 sm:text-sm" %>
    </div>

    <div class="sm:col-span-2">
      <%= form.label :content, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :content, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-800 focus:ring-green-800 sm:text-sm" %>
    </div>

    <div>
      <%= form.label :rating, class: "block text-sm font-medium text-gray-700" %>
      <%= form.select :rating, options_for_select((1..5).map { |r| [r, r] }), {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-800 focus:ring-green-800 sm:text-sm" %>
    </div>

    <div class="sm:col-span-2">
      <%= form.label :avatar, "Author Photo", class: "block text-sm font-medium text-gray-700" %>
      <%= form.file_field :avatar, class: "mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-green-800 file:text-white hover:file:bg-green-700" %>
      
      <% if testimonial.persisted? && testimonial.avatar.attached? %>
        <div class="mt-2">
          <p class="text-sm font-medium text-gray-700">Current Photo</p>
          <div class="mt-1 w-32 h-32 overflow-hidden rounded-full border border-gray-200">
            <%= image_tag testimonial.avatar, class: "w-full h-full object-cover" %>
          </div>
          <div class="mt-2 flex items-center">
            <%= form.check_box :remove_avatar, class: "h-4 w-4 rounded border-gray-300 text-green-800 focus:ring-green-800" %>
            <%= form.label :remove_avatar, "Remove current photo", class: "ml-2 block text-sm text-gray-700" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="pt-5 border-t border-gray-200 flex justify-end">
    <%= link_to "Cancel", testimonials_path, class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-800" %>
    <%= form.submit class: "ml-3 px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-800 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-800" %>
  </div>
<% end %>
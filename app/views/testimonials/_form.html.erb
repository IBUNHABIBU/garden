<%= form_with(model: testimonial, class: "contents") do |form| %>
  <% if testimonial.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(testimonial.errors.count, "error") %> prohibited this testimonial from being saved:</h2>

      <ul class="list-disc ml-6">
        <% testimonial.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :author_name %>
    <%= form.text_field :author_name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": testimonial.errors[:author_name].none?, "border-red-400 focus:outline-red-600": testimonial.errors[:author_name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :author_title %>
    <%= form.text_field :author_title, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": testimonial.errors[:author_title].none?, "border-red-400 focus:outline-red-600": testimonial.errors[:author_title].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :content %>
    <%= form.textarea :content, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": testimonial.errors[:content].none?, "border-red-400 focus:outline-red-600": testimonial.errors[:content].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :rating %>
    <%= form.number_field :rating, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": testimonial.errors[:rating].none?, "border-red-400 focus:outline-red-600": testimonial.errors[:rating].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>

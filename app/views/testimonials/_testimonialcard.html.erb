<div id="<%= dom_id @testimonial %>" class="bg-white rounded-xl shadow-lg overflow-hidden border border-gray-100 hover:shadow-xl transition-shadow duration-300">
  <div class="flex flex-col md:flex-row">
    <!-- Full Height Image Section -->
    <div class="md:w-1/3 bg-gradient-to-br from-green-600 to-green-800 p-8 flex flex-col items-center justify-center text-center text-white">
      <!-- Large Rectangular Avatar -->
      <div class="flex-shrink-0 mb-4 w-full">
        <% if @testimonial.avatar.attached? %>
          <%= image_tag @testimonial.avatar, class: "h-48 w-full object-cover rounded-lg border-4 border-white shadow-lg", alt: @testimonial.author_name %>
        <% else %>
          <div class="h-48 w-full bg-gradient-to-br from-green-500 to-green-700 rounded-lg flex items-center justify-center border-4 border-white shadow-lg">
            <span class="text-white font-bold text-4xl">
              <%= @testimonial.author_name[0..1].upcase %>
            </span>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Content Section -->
    <div class="md:w-2/3 p-8 flex flex-col justify-between">
      <!-- Author Details -->
      <div class="mb-6">
        <h3 class="text-2xl font-bold text-gray-900"><%= @testimonial.author_name %></h3>
        <% if @testimonial.author_title.present? %>
          <p class="text-lg text-gray-600 mt-1"><%= @testimonial.author_title %></p>
        <% end %>
        
        <!-- Rating -->
        <% if @testimonial.rating.present? %>
          <div class="flex items-center mt-3">
            <div class="flex items-center">
              <% 5.times do |i| %>
                <svg class="w-6 h-6 <%= i < @testimonial.rating.to_i ? 'text-amber-500' : 'text-gray-300' %>" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
              <% end %>
            </div>
            <span class="ml-3 text-base font-medium text-gray-700">(<%= @testimonial.rating %>/5)</span>
          </div>
        <% end %>
      </div>

      <!-- Testimonial Content -->
      <div class="mb-6">
        <div class="bg-gradient-to-r from-gray-50 to-blue-50 rounded-xl p-6 relative border border-gray-200">
          <svg class="w-8 h-8 text-green-600 opacity-20 absolute top-4 left-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
          </svg>
          <p class="text-gray-800 text-lg leading-relaxed pl-8"><%= @testimonial.content %></p>
        </div>
      </div>

      <!-- Meta Info -->
      <div class="flex flex-col sm:flex-row items-center justify-between text-sm text-gray-500 pt-4 border-t border-gray-200">
        <span class="flex items-center mb-2 sm:mb-0">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          Added <%= time_ago_in_words(@testimonial.created_at) %> ago
        </span>
        <% if @testimonial.updated_at != @testimonial.created_at %>
          <span class="flex items-center">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
            </svg>
            Updated <%= time_ago_in_words(@testimonial.updated_at) %> ago
          </span>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="bg-white rounded-xl shadow-lg border border-stone-200 overflow-hidden">
  <div class="flex flex-col lg:flex-row">
    <!-- Content Section -->
    <div class="flex-1 p-8">
      <!-- Author Info and Rating -->
      <div class="mb-6">
        <div class="text-center lg:text-left">
          <h3 class="text-2xl font-bold text-stone-900 mb-2"><%= @testimonial.author_name %></h3>
          <% if @testimonial.author_title.present? %>
            <p class="text-lg text-stone-600 mb-4"><%= @testimonial.author_title %></p>
          <% end %>
          
          <% if @testimonial.rating.present? %>
            <div class="flex flex-col sm:flex-row sm:items-center justify-center lg:justify-start space-y-2 sm:space-y-0 sm:space-x-4">
              <div class="flex items-center">
                <% 5.times do |i| %>
                  <svg class="h-6 w-6 <%= i < @testimonial.rating.to_i ? 'text-amber-500' : 'text-stone-300' %>" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                <% end %>
              </div>
              <span class="text-lg font-semibold text-stone-700">(<%= @testimonial.rating %>/5)</span>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Testimonial Content -->
      <div class="mb-6">
        <div class="flex items-start">
          <svg class="h-8 w-8 text-orange-500 mt-1 mr-4 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
            <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
          </svg>
          <p class="text-xl text-stone-700 leading-relaxed italic"><%= @testimonial.content %></p>
        </div>
      </div>

      <!-- Timestamps -->
      <div class="pt-6 border-t border-stone-200">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 text-sm text-stone-500">
          <div class="flex items-center">
            <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span>Added <%= time_ago_in_words(@testimonial.created_at) %> ago</span>
          </div>
          <% if @testimonial.updated_at != @testimonial.created_at %>
            <div class="flex items-center">
              <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
              </svg>
              <span>Updated <%= time_ago_in_words(@testimonial.updated_at) %> ago</span>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Image Section -->
    <div class="lg:w-1/3">
      <% if @testimonial.avatar.attached? %>
        <div class="h-full min-h-64 lg:min-h-full">
          <%= image_tag @testimonial.avatar.variant(resize_to_limit: [400, 300]),
                    loading: "lazy", 
              class: "w-full h-full object-cover",
              alt: @testimonial.author_name %>
        </div>
      <% else %>
        <div class="h-full min-h-64 lg:min-h-full bg-green-600 flex items-center justify-center">
          <div class="text-center text-white p-6">
            <div class="text-4xl font-bold mb-2">
              <%= @testimonial.author_name[0..1].upcase %>
            </div>
            <p class="text-lg font-semibold"><%= @testimonial.author_name %></p>
            <% if @testimonial.author_title.present? %>
              <p class="text-green-100 mt-1"><%= @testimonial.author_title %></p>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
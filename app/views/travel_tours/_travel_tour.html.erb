<div id="<%= dom_id travel_tour %>" class="space-y-4">
  <!-- Header Section -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-6 pb-4 border-b border-gray-200">
    <h2 class="text-2xl font-bold text-green-800"><%= travel_tour.name %></h2>
    <% if travel_tour.featured? %>
      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-amber-100 text-amber-800">
        <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
        </svg>
        Featured
      </span>
    <% end %>
  </div>

  <!-- Main Info Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-6">
    <div class="bg-gray-50 rounded-lg p-4">
      <strong class="block text-sm font-semibold text-gray-600 mb-1">From</strong>
      <p class="text-2xl font-bold text-green-800">$<%= number_with_delimiter(travel_tour.price.to_i) %></p>
      <p class="text-sm text-gray-500">per person</p>
    </div>

    <div class="bg-gray-50 rounded-lg p-4">
      <strong class="block text-sm font-semibold text-gray-600 mb-1">Duration</strong>
      <p class="text-xl font-semibold text-gray-800"><%= travel_tour.duration %> days</p>
    </div>

    <div class="bg-gray-50 rounded-lg p-4">
      <strong class="block text-sm font-semibold text-gray-600 mb-1">Category</strong>
      <p class="text-lg font-medium text-gray-800"><%= travel_tour.category %></p>
    </div>
  </div>

  <!-- Description -->
  <div class="mb-6">
    <strong class="block text-lg font-semibold text-gray-800 mb-3">Description</strong>
    <p class="text-gray-700 leading-relaxed bg-gray-50 rounded-lg p-4"><%= travel_tour.description %></p>
  </div>

  <!-- Highlights & Includes -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <strong class="block text-lg font-semibold text-gray-800 mb-3">Highlights</strong>
      <div class="bg-amber-50 rounded-lg p-4">
        <p class="text-gray-700"><%= bullet_list(travel_tour.highlights) %></p>
      </div>
    </div>

    <div>
      <strong class="block text-lg font-semibold text-gray-800 mb-3">Includes</strong>
      <div class="bg-green-50 rounded-lg p-4">
        <p class="text-gray-700"><%= bullet_list(travel_tour.includes) %></p>
      </div>
    </div>
  </div>
</div>
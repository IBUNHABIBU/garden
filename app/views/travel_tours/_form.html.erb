<%= form_with(model: travel_tour, local: true, class: "space-y-4") do |form| %>
  <% if travel_tour.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-500 p-3 mb-4 rounded">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-500" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(travel_tour.errors.count, "error") %> prohibited this tour from being saved:
          </h3>
          <div class="mt-1 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-0">
              <% travel_tour.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Name & Category Row -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
    <div>
      <%= form.label :name, class: "block text-sm font-medium text-stone-700 mb-1" %>
      <%= form.text_field :name, class: "w-full px-3 py-2 border border-stone-300 rounded-md shadow-sm focus:outline-none focus:ring-1 focus:ring-orange-600 focus:border-orange-600 text-stone-900 text-sm" %>
    </div>

    <div>
      <%= form.label :category, class: "block text-sm font-medium text-stone-700 mb-1" %>
      <%= form.select :category, TravelTour::CATEGORIES, {}, class: "w-full px-3 py-2 border border-stone-300 rounded-md shadow-sm focus:outline-none focus:ring-1 focus:ring-orange-600 focus:border-orange-600 text-stone-900 text-sm" %>
    </div>
  </div>

  <!-- Duration, Price & Featured in One Row -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-3">
    <div>
      <%= form.label :duration, "Duration (days)", class: "block text-sm font-medium text-stone-700 mb-1" %>
      <%= form.number_field :duration, class: "w-full px-3 py-2 border border-stone-300 rounded-md shadow-sm focus:outline-none focus:ring-1 focus:ring-orange-600 focus:border-orange-600 text-stone-900 text-sm" %>
    </div>

    <div>
      <%= form.label :price, class: "block text-sm font-medium text-stone-700 mb-1" %>
      <div class="relative rounded-md shadow-sm">
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
          <span class="text-stone-700 text-sm">$</span>
        </div>
        <%= form.text_field :price, class: "block w-full pl-7 pr-3 py-2 border border-stone-300 rounded-md focus:outline-none focus:ring-1 focus:ring-orange-600 focus:border-orange-600 text-stone-900 text-sm" %>
      </div>
    </div>

    <div class="flex items-end">
      <div class="flex items-center h-10">
        <%= form.check_box :featured, class: "h-4 w-4 text-orange-600 focus:ring-orange-600 border-stone-300 rounded" %>
        <%= form.label :featured, "Featured Tour", class: "ml-2 block text-sm text-stone-700" %>
      </div>
    </div>
  </div>

  <!-- Description -->
  <div>
    <%= form.label :description, class: "block text-sm font-medium text-stone-700 mb-1" %>
    <%= form.text_area :description, rows: 3, class: "w-full px-3 py-2 border border-stone-300 rounded-md shadow-sm focus:outline-none focus:ring-1 focus:ring-orange-600 focus:border-orange-600 text-stone-900 text-sm" %>
  </div>

  <!-- Highlights & Includes Side by Side -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
      <%= form.label :highlights, "Tour Highlights", class: "block text-sm font-medium text-stone-700 mb-1" %>
      <%= form.text_area :highlights, rows: 3, placeholder: "One highlight per line", class: "w-full px-3 py-2 border border-stone-300 rounded-md shadow-sm focus:outline-none focus:ring-1 focus:ring-orange-600 focus:border-orange-600 text-stone-900 text-sm" %>
    </div>

    <div>
      <%= form.label :includes, "What's Included", class: "block text-sm font-medium text-stone-700 mb-1" %>
      <%= form.text_area :includes, rows: 3, placeholder: "One item per line", class: "w-full px-3 py-2 border border-stone-300 rounded-md shadow-sm focus:outline-none focus:ring-1 focus:ring-orange-600 focus:border-orange-600 text-stone-900 text-sm" %>
    </div>
  </div>

  <!-- Main Tour Image & Gallery Images in One Row -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <!-- Main Image -->
    <div>
      <%= form.label :image, "Main Tour Image", class: "block text-sm font-medium text-stone-700 mb-1" %>
      <div class="flex items-center space-x-3">
       <%= form.file_field :image, class: "mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-stone-100 file:text-white hover:file:bg-stone-200" %>
        
        <% if travel_tour.image.attached? %>
          <div class="flex items-center space-x-2">
            <div class="w-10 h-10 bg-stone-200 rounded border border-stone-300 overflow-hidden">
              <% if travel_tour.persisted? && travel_tour.image.attached? %>
                <%= image_tag travel_tour.image.variant(resize_to_limit: [400, 300]),
                    loading: "lazy", class: "w-full h-full object-cover" %>
              <% elsif params.dig(:travel_tour, :image).present? %>
                <div class="w-full h-full flex items-center justify-center bg-amber-100">
                  <span class="text-xs text-amber-700">âœ“</span>
                </div>
              <% end %>
            </div>
            <div class="flex items-center">
              <%= form.check_box :remove_image, class: "h-3 w-3 text-orange-600 focus:ring-orange-600 border-stone-300 rounded" %>
              <%= form.label :remove_image, "Remove", class: "ml-1 block text-xs text-stone-600" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Gallery Images -->
    <div>
      <%= form.label :gallery_images, "Gallery Images", class: "block text-sm font-medium text-stone-700 mb-1" %>
      <div class="flex items-center space-x-3">
        <%= form.file_field :gallery_images, multiple: true, class: "file:border file:border-black file:shadow-lg mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:!bg-green-600 file:text-white hover:file:bg-green-700" %>
        
        <% if travel_tour.gallery_images.attached? %>
          <div class="flex items-center space-x-2">
            <span class="text-xs text-stone-600 bg-stone-100 px-2 py-1 rounded">
              <%= travel_tour.gallery_images.count %> images
            </span>
          </div>
        <% end %>
      </div>
      
      <% if travel_tour.gallery_images.attached? %>
        <div class="mt-2 flex flex-wrap gap-1">
          <% travel_tour.gallery_images.each do |image| %>
            <div class="relative group">
              <div class="w-8 h-8 bg-stone-200 rounded border border-stone-300 overflow-hidden">
                <%= image_tag image, class: "w-full h-full object-cover" %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Actions -->
  <div class="flex justify-end space-x-3 pt-4 border-t border-stone-200">
    <%= link_to "Cancel", travel_tours_path, class: "px-4 py-2 border border-stone-300 rounded shadow-sm text-sm font-medium text-stone-700 bg-white hover:bg-stone-50 focus:outline-none focus:ring-1 focus:ring-orange-600" %>
    <%= form.submit class: "px-4 py-2 border border-transparent rounded shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-1 focus:ring-green-600" %>
  </div>
<% end %>